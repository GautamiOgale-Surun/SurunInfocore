<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#fff">


<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3"
            android:foregroundGravity="center"
            android:fillViewport="false">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingLeft="16dp" android:paddingRight="16dp"
                android:paddingBottom="30dp" android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:context=".AdminHome"
                android:background="#ffffffff">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@drawable/surun"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:maxHeight="130dp"
                    android:minHeight="100dp"
                    android:longClickable="false"
                    android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/linearLayout"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/name"
                    android:hint="Name"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:textColor="#ff000005"
                    android:textColorHint="#000000"
                    android:background="@drawable/edittext_surun"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dp"
                    />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/email"
            android:hint="Username-Email_Id"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:textColor="#ff000005"
            android:textColorHint="#000000"
            android:background="@drawable/edittext_surun"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/mobile"
                    android:hint="Mobile_No"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:textColor="#ff000005"
                    android:textColorHint="#000000"
                    android:background="@drawable/edittext_surun"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dp"
                    />


                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/Submit"
                    android:background="@drawable/button"
                    android:text="Submit"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffffff"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onClick"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/Reset"
                    android:background="@drawable/button"
                    android:text="Reset"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress"
                    android:visibility="visible"
                    android:max="100"
                    android:progress="10"
                    android:indeterminate="true"
                    android:layout_above="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.DrawerLayout>
