<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Click Here To Refresh Offers"
        android:id="@+id/refreshimage"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:background="@drawable/button"
        android:textColor="#ffffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <include layout="@layout/universal_top_strip"
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <include layout="@layout/custom_offer_view"
                android:id="@+id/offerNumberOne" />
            <include layout="@layout/custom_offer_view"
                android:id="@+id/offerNumberTwo"/>
            <include layout="@layout/custom_offer_view"
                android:id="@+id/offerNumberThree"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>