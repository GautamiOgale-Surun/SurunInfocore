<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollone"
        android:foregroundGravity="center">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp" android:paddingTop="7dp"
    android:paddingBottom="30dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify"
        android:src="@drawable/surun"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:paddingStart="30dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:maxHeight="130dp"
        android:minHeight="100dp"
        android:longClickable="false"
        android:layout_marginTop="6dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/verify"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Vdetails"
        android:text="Thank you....."
        android:textColor="#000000"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="6dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/editemail"
        android:text="Enter Email_Id"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_surun"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:textColorHint="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/notification"
        android:text="PLease check Your Email And Verify your Email_id"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:padding="6dp"
        android:visibility="visible" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/editmail"
        android:hint="Enter Verification Code"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_surun"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:textColorHint='#000000'
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/btnverify"
        android:text="Verify"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>

    </ScrollView>
</LinearLayout>

